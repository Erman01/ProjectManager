@model ProjectManager.Core.Models.DepartmentModel

@{
    ViewBag.Title = "Delete";
}

<br />

<h3>Are you sure you want to delete @Model.Name department?</h3>
<div>

    <hr />
    <dl class="dl-horizontal">

        <dt>
           Department Name : 
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
           Created Date : 
        </dt>

        <dd>
            @Model.CreatedAt.ToString("dd.MM.yyyy")
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            @Html.ActionLink("Back to Department List", "Index",null,new {@class="btn btn-default" })
        </div>
    }
</div>
