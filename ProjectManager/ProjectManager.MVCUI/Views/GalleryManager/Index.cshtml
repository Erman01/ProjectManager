@model IEnumerable<ProjectManager.Core.Models.GalleryModel>

@{
    ViewBag.Title = "Index";
}

<h2>My Gallery List</h2>

<p>
    @Html.ActionLink("Create a new gallery", "Create")
</p>
<div class="row">
    <div class="col-lg-12">

        <div class="alert alert-warning">You have @ViewBag.PhotoCount Photos </div>
    </div>
    @foreach (var item in Model)
    {
        <div class="col-lg-3 col-md-4 col-xs-6 thumb">

            <a class="thumbnail" href="@item.Url">
                <img class="img-responsive" src="~/Content/Galleries/@item.Url" style="height: 300px;width:100%" alt="">
                <h4>@item.Title</h4>
            </a>
            <a href="@Url.Action("Delete","GalleryManager",new { id = item.Id })" class="btn btn-default btn-block">
                <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
            </a>

        </div>


    }
</div>
